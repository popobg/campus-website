@model CampusApp.Models.Course

@{
    string action;

    if (ViewBag.Action is null)
    {
        action = string.Empty;
    }
    else
    {
        action = ViewBag.Action.ToLower();
    }
    // same as:
    // string action = ViewBag.Action ?? string.Empty;
    // action = action.ToLower();

    if (action == "edit")
    {
        ViewData["Title"] = "Edit course";
    }
    else
    {
        ViewData["Title"] = "Add new course";
    }
}

<form method="post">
    @if (action == "edit")
    {
        <input type="text" class="form-control" asp-for="Id" readonly hidden="hidden" />
    }

    <div class="mt-3 form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <div class="d-flex justify-content-start">
            <button class="btn btn-primary" asp-action=@action asp-controller="Course">Save</button>
        </div>

        <a href="@Url.Action("List", "Course")" class="btn btn-secondary">Cancel</a>
    </div>
</form>