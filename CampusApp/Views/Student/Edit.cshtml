@model Student

@{
    ViewData["Title"] = "Edit student";
}

<h1>Student to update</h1>
<div>
    @Html.DisplayFor(student => student.Name)
    @Html.DisplayFor(student => student.LastName)
</div>

@if (Model is null)
{
    <p>No student found.</p>
}
else
{
    <form method="post">
        <input type="text" asp-for="Id" class="form-control" hidden="hidden" readonly />

        <div class="mt-3 form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="mt-3 form-group">
            <label asp-for="LastName" class="control-label">Last name</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>

        <div class="mt-3 form-group">
            <label asp-for="Birthdate" class="control-label">Date of birth</label>
            <input type="date" asp-for="Birthdate" class="form-control" />
        </div>

        <div class="mt-3 form-group">
            <label asp-for="Email" class="control-label">Email address</label>
            <input type="email" asp-for="Email" class="form-control" />
        </div>

        <div class="mt-3 form-group form-check">
            <input type="checkbox" asp-for="IsEnrolled" class="form-check-input" id="IsEnrolled" />
            <label asp-for="IsEnrolled" class="control-label">Enrolled</label>
        </div>

        <div class="mt-3">
            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary">Save</button>
                @* <button onclick="return confirmDelete()" asp-action="Delete" asp-controller="Student" class="btn btn-danger">Delete</button> *@
            </div>
        </div>

        <a class="btn btn-secondary" href="@Url.ActionLink("List", "Student")">Cancel</a>
    </form>
}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this student?");
        }
    </script>
}